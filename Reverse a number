package SampleProject;

public class SampleClass{
	
	public static void main (String[] args) {
		
		
		
	 String sc = "370";
	 
	 int length = sc.length()-1;
	 
	 for(int i =length; i>=0; i--) {
		 
		int a = sc.charAt(i);
		
		 int b = Character.getNumericValue(a);

		 System.out.print(b);
		 
		 
	 }
			
	}
}


package SampleProject;

public class SampleClass{  
	public static void main(String[] args){ 

		 int num = 69;
		    int res = 0;
		    int a =0;
		    
		    while(num>0) {
		    	a=num%10;
		    	
		    	res = res*10 + a;
		    	
		    	num = num /10;
		    }
		      System.out.println(res);  
		}
		
	}







package SampleProject;
import java.util.Scanner;

public class SampleClass{                                 11/11/2021
	
	public static void main(String[] args) {
		
		Scanner sc= new Scanner(System.in);
		System.out.println("Enter a number: ");
		int scn= sc.nextInt();
		
		String len = String.valueOf(scn);
		
		int length = len.length()-1;
		
		
		
		while(length>=0) {
			
			int z=scn%10;
			
			System.out.print(z);
			
			scn=scn/10;
			
			length--;
			
		}
		
		
	}

	
}







package JavaCode;
import java.util.Scanner;
public class JavaCode{
	public static void main(String[] args) {
		
		
		Scanner scn= new Scanner(System.in);
		System.out.println("Enter a number: ");
		int sc= scn.nextInt();
		
		String lent = String.valueOf(sc);
		
		int length = lent.length()-1;
		
		
		
		while(length>=0) {
			
			int z=sc%10;
			
			System.out.print(z);
			
			sc=sc/10;
			
			length--;
			
		}
	}
	
	}
		
	
