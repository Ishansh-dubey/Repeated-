package SampleProject;

public class SampleClass{
	
	public static void main (String[] args) {
		
		
		
	 String sc = "370";
	 
	 int length = sc.length()-1;
	 
	 for(int i =length; i>=0; i--) {
		 
		int a = sc.charAt(i);
		
		 int b = Character.getNumericValue(a);

		 System.out.print(b);
		 
		 
	 }
			
	}
}


package SampleProject;

public class SampleClass{  
	public static void main(String[] args){ 

		 int num = 69;
		    int res = 0;
		    int a =0;
		    
		    while(num>0) {
		    	a=num%10;
		    	
		    	res = res*10 + a;
		    	
		    	num = num /10;
		    }
		      System.out.println(res);  
		}
		
	}
