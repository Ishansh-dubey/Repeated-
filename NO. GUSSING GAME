package SampleProject;
import java.util.Scanner;

public class SampleClass{
	
	public static void main(String[] args) {
		
		int ans = 22; 
		
		for(int i= 1; ; i++) {
			
			Scanner sc = new Scanner(System.in);
			System.out.println("Guess a number: ");
			int scn = sc.nextInt();
			
			
			if(ans==scn) {
				System.out.println("Congo you are a genius");
				break;
			}
				if (ans>scn) {
					System.out.println("oopsie!!!! HINT : try gussing higher");
					
				}
				
				if  (ans<scn) {
					System.out.println("oopsie!!!!  HINT : try gussing lower");
				}
			}
			
		}
    

}
